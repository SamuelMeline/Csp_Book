{% extends 'base.html.twig' %}

{% block body %}
	<div class="edit-items">
		<h1 class="page-title">Modification de la panoplie</h1>
		{{ form_start(form) }}

		<div class="form-group">
			{{ form_label(form.name) }}
			{{ form_widget(form.name, {'attr': {'class': 'name-input'}}) }}
			<div class="form-error">
				{{ form_errors(form.name) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(form.difficulty) }}
			{{ form_widget(form.difficulty, {'attr': {'class': 'difficulty-input'}}) }}
			<div class="form-error">
				{{ form_errors(form.difficulty) }}
			</div>

			<div class="form-group">
				{{ form_label(form.price) }}
				{{ form_widget(form.price, {'attr': {'class': 'price-input'}}) }}
				<div class="form-error">
					{{ form_errors(form.price) }}
				</div>
			</div>

			<div class="form-group">
				{{ form_label(form.isFavorite) }}
				{{ form_widget(form.isFavorite, {'attr': {'class': 'isFavorite-input'}}) }}
				<div class="form-error">
					{{ form_errors(form.isFavorite) }}
				</div>
			</div>

			<div class="form-group">
				{{ form_label(form.items) }}
				{{ form_widget(form.items, {'attr': {'class': 'items-input'}}) }}
				<div class="form-error">
					{{ form_errors(form.items) }}
				</div>
			</div>

			<button type="submit" class="btn-form-edit">Modifier ma panoplie</button>

		</div>

		{{ form_end(form) }}
	</div>
{% endblock %}
