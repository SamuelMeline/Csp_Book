{% extends 'base.html.twig' %}

{% block title %}
	Csp_Book - Nouvelle panoplie
{% endblock %}

{% block body %}
	<main class="content">
		<div class="new-items">
			<h1 class="page-title">Création d'une panoplie</h1>

			{{ form_start(form) }}

			<div class="form-group">
				{{ form_label(form.name) }}
				{{ form_widget(form.name, {'attr': {'class': 'name-input'}}) }}
				<div class="form-error">
					{{ form_errors(form.name) }}
				</div>
			</div>

			<div class="form-group">
				{{ form_label(form.difficulty) }}
				{{ form_widget(form.difficulty, {'attr': {'class': 'difficulty-input'}}) }}
				<div class="form-error">
					{{ form_errors(form.difficulty) }}
				</div>

				<div class="form-group">
					{{ form_label(form.price) }}
					{{ form_widget(form.price, {'attr': {'class': 'price-input'}}) }}
					<div class="form-error">
						{{ form_errors(form.price) }}
					</div>
				</div>

				<div class="form-group">
					{{ form_label(form.isPublic) }}
					{{ form_widget(form.isPublic, {'attr': {'class': 'isPublic-input'}}) }}
					<div class="form-error">
						{{ form_errors(form.isPublic) }}
					</div>
				</div>

				<div class="none">
					{{ form_label(form.items) }}
					{{ form_widget(form.items, {'attr': {'class': 'items-input'}}) }}
				</div>

				{# Affichage des images avec les cases à cocher #}
				<div class="form-group">
					{{ form_label(form.items) }}
					<div class="form-group-images">
						{% for item in form.items.vars.choices %}
							{% set itemId = item.value %}
							<div class="form-check">
								<label class="form-check-label">
									<input type="checkbox" name="{{ form.items.vars.full_name }}[]" value="{{ itemId }}" class="form-check-input">
									<img src="{{ asset('images/' ~ item.data.image) }}" alt="{{ item.label }}" class="item-image">
								</label>
							</div>
							{% if loop.index is divisible by(15) %}
							</div>
							<div class="form-group-images">
							{% endif %}
						{% endfor %}
					</div>
					<div class="form-error">
						{{ form_errors(form.items) }}
					</div>
				</div>

				<button type="submit" class="btn-form-new">Créer une panoplie</button>

			</div>
		</div>
		{{ form_end(form) }}
	</main>
{% endblock %}
