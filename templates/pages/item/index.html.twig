{% extends 'base.html.twig' %}

{% block title %}Csp_Book - Mes items{% endblock %}

{% block body %}
    <div class="container">
        {% if not items.items is empty %}
            <h1>Mes items</h1>
            <div class="count">
                <p>
                    Il y a {{ items.getTotalItemCount }} items
                </p>
            </div>
            <table class="table-my-items">
                <thead>
                    <tr>
                        <th>Numéro</th>
                        <th>Image</th>
                        <th>Nom</th>
                        <th>Prix</th>
                        <th>Date de création</th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in items %}
                        <tr>
                            <td>{{ item.id }}</td>
                            <td><img src="{{ asset('images/' ~ item.image) }}" alt="Item Image" class="img-my-items"></td>
                            <td>{{ item.name }}</td>
                            <td>
                                <div class="table-cell-content">
                                    <span class="item-price">{{ item.price }}</span>
                                    <img src="{{ asset('images/gold.png') }}" alt="{{ item.name }}" class="img-gold">
                                </div>
                            </td>
                            <td>{{ item.createdAt|date('d/m/Y') }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            <div class="navigation">
                {{ knp_pagination_render(items) }}
            </div>
        {% else %}
            <p>Il n'y a pas d'items</p>
        {% endif %}
    </div>
{% endblock %}
